    nodes = {
      "harbor-postgres-haproxy-node-00" = { ip = "172.16.137.220", vcpu = 1, ram = 512 }
    }
    base_image_path = "../../../packer/output/08-base-haproxy/ubuntu-server-24-08-base-haproxy.qcow2"
  }
