
harbor_postgres_compute = {
  cluster_identity = {
    layer_number = 20
    service_name = "harbor"
    component    = "postgres"
  }

  postgres_config = {
    nodes = {
      "harbor-postgres-db-node-00" = { ip = "172.16.137.200", vcpu = 2, ram = 2048 }
