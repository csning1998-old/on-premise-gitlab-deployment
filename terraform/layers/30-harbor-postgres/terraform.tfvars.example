      # "harbor-postgres-db-node-01" = { ip = "172.16.137.201", vcpu = 2, ram = 2048 }
      # "harbor-postgres-db-node-02" = { ip = "172.16.137.202", vcpu = 2, ram = 2048 }
    }
    base_image_path = "../../../packer/output/04-base-postgres/ubuntu-server-24-04-base-postgres.qcow2"
  }

  etcd_config = {
    nodes = {
      "harbor-postgres-etcd-node-00" = { ip = "172.16.137.210", vcpu = 1, ram = 1024 }
